<div class="container center-style">
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <article>
        <p><a href="/news">&larr; Back to News</a></p>
      </article>
      <hr>
      <header>
        <h1>{{data.article.title}}</h1>
      </header>
      <div class="row">
        <div class="col-md-6 col-lg-6">
          {{# if data.article.image}}
            <img src="{{cloudinaryUrl data.article.image crop='fit'}}" class="img-responsive">
          {{/if}}
        </div>
        <div class="col-md-6 col-lg-6">
          <ul class="list-group">
            <li class="list-group-item"><strong>Published: </strong>{{data.article.publishedDate}}</li>
						<li class="list-group-item"><strong>Author: </strong>{{#if author.name.first}}by {{author.name.first}}{{/if}}</li>
					</ul>
          <div class="well">
						{{{article.content.brief}}}
            {{{article.content.extended}}}
          </div>
          <a class="btn btn-success btn-block" href="/contact">Ask About This Article</a>
        </div>
      </div>
    </div>
  </div>
</div>
