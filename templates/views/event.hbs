<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/news">&larr; Back to News</a></p>
				<hr>
				<header>
					<h1>{{data.event.title}}</h1>
					<h5>
						<!--{{{categoryList data.article.categories prefix="articleed in "}}}-->
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{#if data.event.image}}<img src="{{{cloudinaryUrl data.article.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
					{{{data.event.content.brief}}}
				</div>
			</article>
		</div>
	</div>
</div>
