              {{# if image}}<img style="max-width:100%;max-height:100%;" class="card-img-top img-responsive" src="{{{cloudinaryUrl image }}}" class="thumbnail" style="margin: auto">{{/if}}
            </div>
            <div class="card-body" style="font-family:Lora;">
              {{{ description.brief }}}
            </div><!-- article content-->
          </div>
        </div>
      </article><!-- article -->
      {{/each}}
    </div>
  </div>
</div>
